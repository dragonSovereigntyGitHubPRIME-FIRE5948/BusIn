<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SGBusAndLocationAlarm" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="buttonStyle">@style/styleButton</item>
        <item name="dialogTheme">@style/FullDialog</item>
<!--        <item name="android:background">@drawable/background</item>-->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Custom theme for sign in activity -->
    <style name="SignInTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="fontFamily">@font/dejanire_black</item>
    </style>

    <!-- Title -->
    <style name="FullDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/dejanire_black</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:windowFrame">@null</item>
        <!-- turn off any drawable used to draw a frame on the window -->
        <item name="android:windowBackground">@null</item>
        <!-- turn off any drawable used to draw a frame on the window -->
        <item name="android:windowIsFloating">true</item>
        <!-- float the window so it does not fill the screen -->
        <item name="android:windowNoTitle">true</item>
        <!-- remove the title bar we make our own-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- remove the shadow from under the title bar -->
    </style>


    <!-- Text -->
    <style name="styleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Buttons -->
    <style name="styleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16sp</item>
        <item name="fontFamily">@font/dejanire_black</item>
    </style>

    <!-- Buttons (Alternate) -->
    <style name="styleButtonAlt" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_alt</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16sp</item>
        <item name="fontFamily">@font/dejanire_black</item>
    </style>

    <!--         -->
    <!-- TOP BAR -->
    <!--         -->

    <!-- Title -->
    <style name="styleTopBarTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/dejanire_black</item>
    </style>

    <!-- Background -->
    <style name="styleTopBarBackground" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_top_bar</item>
        <item name="android:padding">15sp</item>
        <item name="android:paddingStart">25sp</item>
