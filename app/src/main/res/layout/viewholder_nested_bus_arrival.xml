<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="50sp"
        android:paddingEnd="0sp">

        <LinearLayout
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBusNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="969"
                android:textStyle="bold"
                android:theme="@style/styleArrivalText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10sp"
            android:paddingStart="0sp"
            android:paddingEnd="10sp">

            <LinearLayout
                android:layout_width="45sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDuration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Arr"
                    android:theme="@style/styleArrivalDuration" />

                <TextView
                    android:id="@+id/tvTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="10.59 PM"
                    android:theme="@style/styleArrivalTime" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBusType1"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_marginEnd="10sp" />

                    <ImageView
                        android:id="@+id/ivWheelchair1"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_marginEnd="10sp" />

                    <ImageView
                        android:id="@+id/ivSeats1"
                        android:layout_width="10sp"
                        android:layout_height="10sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="45sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDuration2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="32"
                    android:theme="@style/styleArrivalDuration" />

                <TextView
                    android:id="@+id/tvTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TextView"
                    android:theme="@style/styleArrivalTime" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBusType2"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_marginEnd="10sp" />

                    <ImageView
                        android:id="@+id/ivWheelchair2"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_marginEnd="10sp" />

                    <ImageView
                        android:id="@+id/ivSeats2"
                        android:layout_width="10sp"
                        android:layout_height="10sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="45sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDuration3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-"
                    android:theme="@style/styleArrivalDuration" />

                <TextView
                    android:id="@+id/tvTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-"
                    android:theme="@style/styleArrivalTime" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBusType3"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_marginEnd="10sp" />

                    <ImageView
                        android:id="@+id/ivWheelchair3"
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_marginEnd="10sp" />

                    <ImageView
                        android:id="@+id/ivSeats3"
                        android:layout_width="10sp"
                        android:layout_height="10sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_marginStart="17sp"
        android:layout_marginEnd="5sp"
        android:background="@color/secondary" />

</LinearLayout>